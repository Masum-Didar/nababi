<h1>Your Cart</h1>

<% if @cart_items.any? %>
  <table>
    <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @cart_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td>৳ <%= item.product.price %></td>
        <td>
          <%= form_with model: item, url: cart_path(item), method: :patch, local: true do |f| %>
            <%= f.number_field :quantity, value: item.quantity, min: 1, style: "width: 50px;" %>
            <%= f.submit "Update" %>
          <% end %>
        </td>
        <td>৳ <%= item.quantity * item.product.price %></td>
        <td>
          <%= button_to "Remove", cart_path(item), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <p>Total: ৳ <%= @cart_items.sum { |item| item.quantity * item.product.price } %></p>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
