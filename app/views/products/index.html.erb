<!-- food section -->

<section class="food_section layout_padding-bottom">
  <div class="container">
    <div class="heading_container heading_center">
      <h2>
        Our Menu
      </h2>
    </div>

    <ul class="filters_menu">
      <li class="active" data-filter="*">All</li>
      <li data-filter=".burger">Burger</li>
      <li data-filter=".pizza">Pizza</li>
      <li data-filter=".pasta">Pasta</li>
      <li data-filter=".fries">Fries</li>
    </ul>

    <div class="filters-content">
      <% if @products.present? %>
        <div class="row grid">
          <% @products.each do |product| %>
          <div class="col-lg-4 col-sm-6">
            <div class="box">
              <div>
                <div class="img-box">
                  <% product.images.each do |image| %>
                    <%= link_to product_path(product) do %>
                      <%= image_tag(image) %>
                    <% end %>
                  <% end %>
                </div>
                <div class="detail-box">
                  <h5>
                    <%= truncate(product.name, length: 32) %>
                  </h5>
                  <p>
                    <%= truncate(product.description, length: 100) %>
                  </p>
                  <div class="options">
                    <div class="options">
                      <h6>
                        $<%= product.price %>
                      </h6>
                      <% if product.discount.present? %>
                        <h3 style="padding-left: 10px; font-size: 14px;">
                          <%= product.discount %>% Discount!
                        </h3>
                      <% end %>
                    </div>
                    <%= link_to root_path, class: "user_link" do %>
                      <i class="fa fa-shopping-cart" style="color: #ffffff;" aria-hidden="true"></i>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
    <div class="btn-box">
      <a href="">
        View More
      </a>
    </div>
  </div>
</section>

<!-- end food section -->

