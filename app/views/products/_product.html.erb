<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>
  <h3>Product Images</h3>
  <% if product.images.attached? %>
    <% product.images.each do |image| %>
      <%= image_tag(image, style: "width: 200px;") %>
    <% end %>
  <% else %>
    <p>No images attached.</p>
  <% end %>

</div>


