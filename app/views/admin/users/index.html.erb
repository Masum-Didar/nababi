<!-- Recent Users Table -->
<div class="card mb-5">
  <div class="card-header">
   Users
  </div>
  <div class="card-body table-responsive">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>